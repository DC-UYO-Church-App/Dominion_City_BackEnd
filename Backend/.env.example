# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dominion_city_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@dominioncityuyo.org
SENDGRID_FROM_NAME=Dominion City Uyo

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# Church Configuration
CHURCH_NAME=Dominion City Uyo (Golden Heart)
CHURCH_EMAIL=info@dominioncityuyo.org
CHURCH_PHONE=+234-xxx-xxx-xxxx
CHURCH_ADDRESS=Uyo, Akwa Ibom State, Nigeria

# Notification Settings
ABSENCE_WARNING_THRESHOLD=2
ABSENCE_CRITICAL_THRESHOLD=4
TITHE_REMINDER_THRESHOLD=2
